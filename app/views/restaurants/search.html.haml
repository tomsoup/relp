%table.table.table-hover.table-condensed
  %thead
    %tr
      %th Name
      %th Address
      %th Phone
      %th Website
      - if user_signed_in? && current_user.admin?
        %th{:colspan => "2"}
  %tbody
    - @restaurants.each do |restaurant|
      %tr
        %td= link_to restaurant.name, restaurant
        %td= restaurant.address
        %td= restaurant.phone
        %td= link_to restaurant.website, restaurant.website
        - if user_signed_in? && current_user.admin?
          %td= link_to 'Edit', edit_restaurant_path(restaurant), class: "btn btn-success"
          %td= link_to 'Destroy', restaurant, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger"
