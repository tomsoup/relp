.jumbotron
  %h2
    Relp Helps You Search Like Yelp
  %h3
    Search and rate your favorite foodie now

%p#notice= notice
%h1 Listing Restaurants
%table.table.table-hover.table-condensed
  %thead
    %tr
      %th Name
      %th Address
      %th Phone
      %th Website
      %th{:colspan => "3"}
  %tbody
    - @restaurants.each do |restaurant|
      %tr
        %td= restaurant.name
        %td= restaurant.address
        %td= restaurant.phone
        %td
          =link_to restaurant.website, restaurant.website
        %td= link_to 'Show', restaurant, class: "btn btn-link"
        %td= link_to 'Edit', edit_restaurant_path(restaurant), class: "btn btn-link"
        %td= link_to 'Destroy', restaurant, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link"
%br/
= link_to 'New Restaurant', new_restaurant_path

= image_tag "https://s3-us-west-2.amazonaws.com/reslp/hong-kong-skyline-pen2.jpg", class: "img-responsive"
